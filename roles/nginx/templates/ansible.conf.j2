{% for upstream in nginx_upstreams %}
    upstream {{ upstream.name }} {
{% for server in upstream.servers %}
        server {{ server }};
{% endfor %}
    }

server {
    listen 80;
    server_name {{ nginx_sitename }};
        
    location / {
        root /usr/share/nginx/html/{{ nginx_sitename }};
        index index.html index.htm;
    }
}
